<Page
    x:Class="FoxyWebAppManager.Views.ProfilesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:FoxyWebAppManager.Behaviors"
    xmlns:cc="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Never"
    mc:Ignorable="d">

    <Grid
        x:Name="ContentArea"
        RowSpacing="36">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <Button Command="{x:Bind ViewModel.CreateProfileUICommand}">
            <TextBlock
                x:Uid="CreateNewProfile"
                Style="{StaticResource BodyLargeTextBlockStyle}" />
        </Button>

        <ScrollViewer Grid.Row="1">
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.FireFoxProfiles, Mode=OneWay}">
                <ItemsRepeater.Resources>
                    <StandardUICommand
                        x:Key="RemoveProfile"
                        Command="{x:Bind ViewModel.RemoveProfileUICommand}" />
                    <StandardUICommand
                        x:Key="OpenRoaming"
                        Command="{x:Bind ViewModel.OpenRoamingProfileCommand}" />
                </ItemsRepeater.Resources>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate
                        xmlns:p="using:FoxyWebAppManager.Models"
                        x:DataType="p:FireFoxProfile">
                        <cc:SettingsExpander
                            Description="{x:Bind Section}"
                            Header="{x:Bind Name}">
                            <cc:SettingsExpander.HeaderIcon>
                                <FontIcon Glyph="&#xE77B;" />
                            </cc:SettingsExpander.HeaderIcon>
                            <cc:SettingsExpander.Items>

                                <!--<cc:SettingsCard
                                    x:Uid="Rename"
                                    HeaderIcon="{ui:FontIcon Glyph=&#xE8AC;}">

                                    <StackPanel
                                        Orientation="Horizontal"
                                        Spacing="8">
                                        <TextBox
                                            Width="200"
                                            Text="{x:Bind Name}" />
                                        <Button
                                            x:Uid="RenameB"
                                            HorizontalAlignment="Right"
                                            Style="{StaticResource AccentButtonStyle}" />
                                    </StackPanel>

                                </cc:SettingsCard>-->



                                <cc:SettingsCard
                                    x:Uid="Remove"
                                    HeaderIcon="{ui:FontIcon Foreground=Red,
                                                             Glyph=&#xECC9;}">
                                    <Button
                                        x:Uid="Delete"
                                        Command="{StaticResource RemoveProfile}"
                                        CommandParameter="{x:Bind}"
                                        Style="{StaticResource AccentButtonStyle}" />
                                </cc:SettingsCard>
                                <cc:SettingsCard
                                    x:Uid="OpenRoamingProfile"
                                    ActionIcon="{ui:FontIcon Glyph=&#xE8A7;}"
                                    Description="{x:Bind Path}"
                                    HeaderIcon="{ui:FontIcon Glyph=&#xE8DA;}"
                                    IsClickEnabled="True">
                                    <a:Interaction.Behaviors>
                                        <a:EventTriggerBehavior EventName="Click">
                                            <a:InvokeCommandAction
                                                Command="{StaticResource OpenRoaming}"
                                                CommandParameter="{x:Bind}" />
                                        </a:EventTriggerBehavior>
                                    </a:Interaction.Behaviors>
                                </cc:SettingsCard>


                            </cc:SettingsExpander.Items>
                        </cc:SettingsExpander>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollViewer>





    </Grid>

</Page>
