<Page
    x:Class="FoxyWebappManager.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:Microsoft.Xaml.Interactivity"
    xmlns:con="using:FoxyWebappManager.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:types="using:FoxyWebappManager.Models"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="12">
            <AutoSuggestBox
                Width="450"
                HorizontalAlignment="Left"
                Header="FireFox Path"
                QueryIcon="Folder"
                Text="{x:Bind ViewModel.FireFoxPath, Mode=TwoWay}">
                <a:Interaction.Behaviors>
                    <a:EventTriggerBehavior EventName="QuerySubmitted">
                        <a:InvokeCommandAction Command="{x:Bind ViewModel.OpenDialogFireFoxCommand}" />
                    </a:EventTriggerBehavior>
                </a:Interaction.Behaviors>
            </AutoSuggestBox>

            <ComboBox
                Width="450"
                Header="FireFox Profiel"
                ItemsSource="{x:Bind ViewModel.Profiels, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectedProfiel, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="types:FireFoxProfile">
                        <TextBlock Text="{x:Bind Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBox
                Width="450"
                HorizontalAlignment="Left"
                Header="Host (WebApp Url)"
                Text="{x:Bind ViewModel.Hostname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <StackPanel
                Orientation="Horizontal"
                Spacing="12">
                <Image
                    Width="64"
                    Height="64"
                    Source="{x:Bind ViewModel.FavIcon, Mode=OneWay}" />
                <Button Content="Use other Icon" />
            </StackPanel>
            <CheckBox Content="Enhanced WebApp Style Chrome like (without Navbar)" />
            <Button
                Command="{x:Bind ViewModel.SaveCommand}"
                Content="Save To Desktop" />
        </StackPanel>

    </Grid>
</Page>
